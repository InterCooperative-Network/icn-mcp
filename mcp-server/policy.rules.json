{
  "no_direct_merges": true,
  "codeowners_integration": true,
  "path_caps": {
    "architect": [
      "docs/**",
      "mcp-server/src/types.ts",
      "mcp-server/src/api.ts"
    ],
    "planner": [
      "tasks/**",
      "docs/tasks/**",
      "docs/planning/**"
    ],
    "reviewer": [
      "docs/**",
      ".github/**",
      "ci/**",
      "tools/**",
      "*.md"
    ],
    "ops": [
      ".github/**",
      "ci/**",
      "tools/**",
      "mcp-server/src/metrics.ts",
      "mcp-server/src/index.ts",
      "Dockerfile",
      "*.yml",
      "*.yaml"
    ],
    "security": [
      "mcp-server/src/auth.ts",
      "mcp-server/src/policy.ts",
      "mcp-server/policy.rules.json",
      "docs/security/**",
      "security/**"
    ]
  },
  "reviews_required": [
    { "paths": ["docs/protocols/**"], "reviewers": ["security", "fahertym"] },
    { "paths": ["docs/security/**"], "reviewers": ["security", "fahertym"] },
    { "paths": ["security/**"], "reviewers": ["security", "fahertym"] },
    { "paths": ["protocols/**"], "reviewers": ["security", "fahertym"] },
    { "paths": [".github/**", "ci/**"], "reviewers": ["ops", "fahertym"] },
    { "paths": ["mcp-server/src/auth.ts", "mcp-server/src/policy.ts"], "reviewers": ["security", "fahertym"] }
  ]
}



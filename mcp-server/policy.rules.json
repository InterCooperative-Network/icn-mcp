{
  "no_direct_merges": true,
  "codeowners_integration": true,
  "path_caps": {
    "architect": ["docs/**", "mcp-server/src/types.ts"],
    "planner": ["tasks/**", "docs/tasks/**"],
    "reviewer": ["docs/**", ".github/**", "ci/**", "tools/**"],
    "ops": [".github/**", "ci/**", "tools/**", "mcp-server/src/metrics.ts"]
  },
  "reviews_required": [
    { "paths": ["docs/protocols/**", "docs/security/**"], "reviewers": ["security", "fahertym"] },
    { "paths": [".github/**", "ci/**"], "reviewers": ["ops", "fahertym"] },
    { "paths": ["mcp-server/src/auth.ts", "mcp-server/src/policy.ts"], "reviewers": ["security", "fahertym"] }
  ]
}



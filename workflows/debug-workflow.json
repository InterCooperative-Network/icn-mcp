{
  "id": "debug-workflow",
  "name": "Debug Issue Workflow",
  "description": "Systematic workflow for debugging and fixing issues",
  "category": "debugging",
  "tags": ["debug", "troubleshooting", "bug-fix"],
  "steps": [
    {
      "id": "reproduce-issue",
      "title": "Reproduce the Issue",
      "description": "Consistently reproduce the bug or issue",
      "actions": [
        "Gather information about the issue",
        "Identify steps to reproduce",
        "Create minimal reproduction case",
        "Document expected vs actual behavior",
        "Verify issue exists in current codebase"
      ],
      "validation": [
        "Issue can be reproduced consistently",
        "Reproduction steps are documented",
        "Expected behavior is clearly defined",
        "Issue is confirmed in current version"
      ]
    },
    {
      "id": "analyze-logs",
      "title": "Analyze Logs and Error Messages",
      "description": "Examine logs, error messages, and stack traces",
      "actions": [
        "Collect relevant log files",
        "Analyze error messages and stack traces",
        "Identify patterns in the errors",
        "Check system resource usage",
        "Review recent code changes"
      ],
      "dependencies": ["reproduce-issue"],
      "validation": [
        "All relevant logs are collected",
        "Error patterns are identified",
        "Resource issues are ruled out",
        "Recent changes are analyzed"
      ]
    },
    {
      "id": "isolate-root-cause",
      "title": "Isolate Root Cause",
      "description": "Identify the specific component or code causing the issue",
      "actions": [
        "Use debugging tools and breakpoints",
        "Add targeted logging",
        "Test individual components",
        "Review related code sections",
        "Check configuration and environment"
      ],
      "dependencies": ["analyze-logs"],
      "validation": [
        "Root cause is identified",
        "Faulty component is isolated",
        "Debugging evidence supports conclusion",
        "Environment factors are considered"
      ]
    },
    {
      "id": "develop-fix",
      "title": "Develop and Test Fix",
      "description": "Create a fix for the identified issue",
      "actions": [
        "Design solution approach",
        "Implement the fix",
        "Write or update tests",
        "Test fix against reproduction case",
        "Test for regression issues"
      ],
      "dependencies": ["isolate-root-cause"],
      "validation": [
        "Fix addresses the root cause",
        "Reproduction case now passes",
        "No new issues are introduced",
        "Tests cover the fix"
      ]
    },
    {
      "id": "validate-solution",
      "title": "Validate Solution",
      "description": "Ensure the fix works in all scenarios",
      "actions": [
        "Test fix in different environments",
        "Run full test suite",
        "Test edge cases and boundary conditions",
        "Get code review from team",
        "Verify performance impact"
      ],
      "dependencies": ["develop-fix"],
      "validation": [
        "Fix works in all test environments",
        "All existing tests still pass",
        "Edge cases are handled",
        "Code review is complete",
        "Performance is acceptable"
      ]
    },
    {
      "id": "deploy-and-monitor",
      "title": "Deploy and Monitor",
      "description": "Deploy the fix and monitor for success",
      "actions": [
        "Deploy fix to staging/production",
        "Monitor application metrics",
        "Verify issue is resolved",
        "Monitor for any new issues",
        "Update documentation if needed"
      ],
      "dependencies": ["validate-solution"],
      "validation": [
        "Fix is successfully deployed",
        "Original issue is resolved",
        "No new issues have appeared",
        "Monitoring shows healthy metrics",
        "Documentation is updated"
      ]
    }
  ],
  "metadata": {
    "estimatedDuration": "2 hours - 2 days",
    "difficulty": "medium",
    "prerequisites": ["Debugging skills", "System knowledge", "Testing experience"]
  }
}